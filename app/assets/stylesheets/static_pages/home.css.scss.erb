@import "bootstrap";

body{
	background: #fff url(<%= asset_path 'wavegrid.png' %>) repeat left top;
	font-family: ‘Metrophobic’, Arial, serif;
}
div.block{
	border: 1px solid #ddd;
	-webkit-box-shadow: 0 1px 3px #ccc;
	-moz-box-shadow: 0 1px 3px #ccc;
	box-shadow: 0 1px 3px #ccc;
	cursor: pointer;
	background-color: rgb(250, 250, 250);
}

div.block.active{
	border: 1px solid #ccc;
	-webkit-box-shadow: 0 2px 5px #ccc;
	-moz-box-shadow: 0 2px 5px #ccc;
	box-shadow: 0 2px 5px #ccc;
}
div.block img.thumbnail{
	width: 460px;
	margin: 5px auto;
	border: none;
	padding: 0;
}
div.block div.title h3{
	margin: 0 20px;
	font-size: 20px;
	font-weight: normal;
}
div.block div.description{
	margin: 0px 20px 5px 20px;
}
div.skills{
	margin: 0 20px 10px 20px;
}
div.skills span{
	font-size: 12px;
}
span.tag{
	display: inline-block;
	background: #EEE;
	padding: 0px 3px;
	border-radius: 5px;
	color: #666;
	border: 1px solid #ddd;
	margin: 3px;
}
div.portrait{
	width: 200px;
	padding: 5px;
	border: 1px solid #ddd;
	border-radius: 5px;
	background-color: #eee;
	margin: 20px;
	position: absolute;
}
div.about{
	background-color: white;
	padding: 20px;
	border: 1px solid #ddd;
	border-radius: 5px;
	width: 500px;
	line-height: 30px;
	position: absolute;
	left: 300px;
	margin-top: 20px;
}
div.name{
	font-size: 20px;
	text-align: center;
	padding: 10px;
}
div.email{
	text-align: center;
}